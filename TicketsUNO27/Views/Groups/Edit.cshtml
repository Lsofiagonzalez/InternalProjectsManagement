@model Core.Models.User.Groups



@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layouts/Dashboard.cshtml";
}

@{
    ViewBag._Active = "Edit";
    ViewBag._Panel = "Home";
}


<div class=" segment">
    <h1 class="ui header" align="center">
        <div class="content">
            <big style="text-transform:uppercase">
                Módulo  de Edición de Grupos
            </big>
                <div class="sub header">
                    <div class="ui breadcrumb">
                        <a class="section" href="@Url.Action("home","Home")">Inicio</a>
                        <div class="divider"> / </div>
                        <a class="section" href="@Url.Action("Index")">Listar</a>
                        <div class="divider"> / </div>
                        <div class="active section">Edicion de Grupos</div>
                    </div>
                </div>
        </div>

    </h1>
    <div class="ui hidden divider"></div>

</div>

<br />


<div class="ui grid">
    <div class="ten wide centered column">
        <div class="ui segments">
            <div class="ui teal segment">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "ui large form", autofocus = "" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="field">
                        @Html.LabelFor(model => model.GroupName, "Nombre de Grupo", htmlAttributes: new { @class = "" })

                        <div class="ui mini icon input">
                            @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "" } })
                            <i class="keyboard outline outline icon"></i>
                        </div>


                        @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "ui error message" })
                    </div>

                    <div class="field">
                        @Html.LabelFor(model => model.ProjectId, "Proyecto", htmlAttributes: new { @class = "" })

                        @Html.DropDownList("ProjectId", null, "Sin Seleccionar", htmlAttributes: new { @class = "ui search selection dropdown" })
                        @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "ui error message" })
                    </div>


                    <div class="field">
                        <br />
                        <input type="submit" value="Guardar" class="ui  large blue submit button" />
                        @Html.ActionLink("Regresar", "Index", null, new { @class = "ui  large submit button" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>



