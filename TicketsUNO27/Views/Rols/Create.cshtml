                        <div class="ui mini icon input">
                            @Html.EditorFor(model => model.ParentId, new { htmlAttributes = new { @class = "" } })
                            <i class="keyboard outline outline icon"></i>
                        </div>



                        @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "ui error message" })
                    </div>

