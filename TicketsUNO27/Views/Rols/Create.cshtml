@model Core.Models.User.Rols

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layouts/Dashboard.cshtml";
}

@{
    ViewBag._Active = "Create";
    ViewBag._Panel = "Create";
}
@if (ViewBag.Error != null)
{

    <div class="ui error visible  message">@ViewBag.Error</div>
}


<br />
<br />
<div class=" segment">
    <h1 class="ui header">
        <div class="content">
            Módulo  de Creacion de Roles
            <div class="sub header">
                <div class="ui breadcrumb">
                    <a class="section" href="@Url.Action("home","Home")">Inicio</a>
                    <div class="divider"> / </div>
                    <a class="section" href="@Url.Action("Index")">Listar</a>
                    <div class="divider"> / </div>
                    <div class="active section" style="text-transform:lowercase">Creación de Roles</div>
                </div>
            </div>
        </div>

    </h1>
    <div class="ui hidden divider"></div>

</div>

<br />
<br />
